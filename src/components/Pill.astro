---
type PillProps = {
  className?: string
}

const { className, target = '_blank'  } = Astro.props;
---

<a
    class={`rounded-2xl border border-white/30 flex justify-center items-center gap-x-2 py-2 px-4 ${className} 
    text-xl font-bold bg-opacity-80 hover:bg-opacity-80`}
    {...Astro.props}
    target={target}
    rel="noopener noreferrer"
>

    <slot/>
</a> 